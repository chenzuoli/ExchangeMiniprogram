/* components/momentItem/index.wxss */
.item{
  display: flex;
  min-height: 240rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin: 0 20rpx 20rpx;
  overflow: hidden;
  /* box-shadow: rgb(0 0 0 / 10%) 0 2rpx 4rpx 0; */
}
.textColor{
  color: #999;
}
.right{
  width: 65px;
  background-color: red;
  height: 100%;
}
.img{
  width: 280rpx;
}
.info{
  flex: 1;
  display: flex;
  min-width: 0;
  flex-direction: column;
}
.describe{
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 12rpx;
  border-bottom: 1rpx solid rgba(194, 194, 194,.2);
  margin-bottom: 6rpx;
  font-weight: 700;
}
.text{
  overflow: hidden;
  white-space:nowrap;
  text-overflow:hidden;
  text-overflow:ellipsis;
  /* overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; */
}
.bottom{
  display: flex;
  max-height: 40rpx;
  justify-content: space-between;
}
.sign{
  border-radius: 10rpx;
  line-height: 40rpx;
  background-color: #F8D800;
  padding: 0 6rpx;
  color: #000;
  font-size: 24rpx;
  box-shadow: rgb(0 0 0 / 10%) 0 2rpx 4rpx 0;
}
.cost{
  border-radius: 10rpx;
  line-height: 40rpx;
  background-color: #FF5809;
  padding: 0 6rpx;
  color: #fff;
  font-size: 28rpx;
}
.free{
  background-color: #62BD69;
  padding: 0 6rpx;
  border-radius: 10rpx;
  color: #fff;
  font-size: 28rpx;
}
.avatar{
  display: flex;
  flex: 2;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx 10rpx;
}
.avatarImg{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}
.time{
  font-size: 28rpx;
  color: #999;
}