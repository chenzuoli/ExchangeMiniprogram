/* pages/binding-page/index.wxss */
.content{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background-image: linear-gradient( 135deg, #FFA8A8 10%, #FCFF00 100%); */
  background-image: linear-gradient( 135deg, #5EFCE8 10%, #736EFE 100%);

}
.binding{
  width: 76%;
  padding: 36rpx;
  /* background-color: #f8bc31; */
  background-color: #fff;
  border-radius: 42rpx;
}
.input{
  display: flex;
  justify-content: space-between;
  border: 1px solid #000;
  border-radius: 60rpx;
  margin-bottom: 30rpx;
  overflow: hidden !important;
}
.inp{
  flex: 1;
  height: 100%;
  padding:20rpx 0 12rpx 30rpx;
}
.placeholder{
  padding: 0 0 0 12rpx;
  height: 100%;
}
/* 兼容ios */
.btnShow{
  width: 25vw;
  border-radius: 0 60rpx 60rpx 0;
  -webkit-box-shadow: 6rpx 5rpx 24rpx #666666;
  -moz-box-shadow: 6rpx 5rpx 24rpx #666666;
  box-shadow: 6rpx 5rpx 24rpx #666666;
}
.test{
  width: 100% !important;
  padding: 22rpx;
  border: none !important;
  border-radius: 0 60rpx 60rpx 0 !important;
  text-align: center;
  background: linear-gradient(to right, #2F80ED, #56CCF2) !important;
  font-family: Arial;
  text-decoration: none;
  color: rgb(245, 245, 245) !important;
}
.bottonBtn{
  display: flex;
  justify-content: space-between;
}
.bottonBtn button{
  margin: 0 !important;
}
.empty, .bindingSno{
  width: 45% !important;
}
.empty{
  border: 1px solid #000;
  border-radius: 60rpx 18rpx 18rpx 60rpx;
}
.bindingSno{
  border-radius: 18rpx 60rpx 60rpx 18rpx;
  border: 1px solid #F8D800;
  background-image: linear-gradient( 135deg, #FDEB71 10%, #F8D800 100%);
}