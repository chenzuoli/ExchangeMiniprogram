/* pages/home-music/index.wxss */
page{
  padding-top: 120rpx;
}
.header{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fffbe8;
  z-index: 999;
}
.van-notice-bar{
  /* width: 100%; */
  height: 100% !important;
}
.sorts{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  padding-left:20rpx;
}
.notice-bar{
  flex: 1;
}
.momentContent{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 16rpx;
}
.item{
  width: 49%;
  min-height: 380rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 12rpx 0 rgba(104, 104, 104, 0.1)
}
.item .image{
  width: 100%;
  height: 390rpx;
}
.info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:10rpx 10rpx 20rpx;
}
.avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.text{
  flex: 1;
  width: 0;
}
.describe, .cost{
  overflow: hidden;
  white-space:nowrap;
  text-overflow:hidden;
  text-overflow:ellipsis;
}
.describe{
  font-size: 28rpx;
  font-weight: 600;
}
