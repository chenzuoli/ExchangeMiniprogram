}
.cost text{
  color: #00b26a;
} */
.signAndCost{
  display: flex;
  justify-content: space-between;
  margin-top: 12rpx;
}
.collect{
  font-size: 32rpx;
  color: #666;
  padding-left: 6rpx;
}
.cost{
  border-radius: 10rpx;
  background-color: #FF5809;
  padding: 0 6rpx;
  color: #fff;
  font-size: 28rpx;
}
.free{
  background-color: #62BD69;
  padding: 0 6rpx;
  border-radius: 10rpx;
  color: #fff;
  font-size: 28rpx;
}
.sign{
  border-radius: 10rpx;
  line-height: 40rpx;
  background-color: #F8D800;
  padding: 0 6rpx;
  color: #000;
  font-size: 24rpx;
  box-shadow: rgb(0 0 0 / 10%) 0 2rpx 4rpx 0;
}
.loading{
  display: flex;
  justify-content: center;
  min-height: 60rpx;
}
.popup{
  display: flex;
}
.tagItem{
  flex: 1;
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
  font-weight: 700;
}
.custom-image{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 100%;
  color: #999;
}
.tagActive{
  background-color: rgba(255, 215, 0, .8);
}
.to{
  color: #fddb00;
  font-weight: 700;
  text-decoration:underline;
}